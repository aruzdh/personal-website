---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="POV: ACCESS_DENIED" subtitle="This sector is currently undergoing maintenance.">
  <section class="maintenance-container">
    <div class="warning-box">
      <div class="warning-header">
        <span>! SYSTEM_ALERT</span>
        <span>ERROR_CODE: 403_UNDER_CONSTRUCTION</span>
      </div>

      <div class="warning-body">
        <p class="blink-text"> {">"} DATA_RETRIEVAL_FAILED</p>
        <p>
          The 'LIFE' module is currently being refactored. The database entries for day-to-day photos are offline for consistency checks.
        </p>

        <div class="ascii-art">
          <pre>‚úñêÉ∑‚úñ</pre>
        </div>
        
        <p class="status-line">[ PROGRESS: ‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë 30% ]</p>
      </div>
      
      <div class="warning-footer">
        <a href="/" class="cmd-link">RETURN_TO_ROOT</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .maintenance-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 40vh;
    padding: 2rem 0;
  }

  .warning-box {
    border: 2px solid var(--border);
    width: 100%;
    max-width: 500px;
    background: var(--bg);
    box-shadow: 8px 8px 0px var(--border);
  }

  .warning-header {
    background: var(--border);
    color: var(--bg);
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.7rem;
    font-weight: bold;
    font-family: monospace;
  }

  .warning-body {
    padding: 2rem;
    font-family: "JetBrains Mono", monospace;
    font-size: 0.9rem;
  }

  .blink-text {
    color: red; 
    font-weight: bold;
    margin-bottom: 1rem;
    animation: blink 1s step-end infinite;
  }

  .ascii-art pre {
    font-size: 0.8rem;
    line-height: 1.2;
    margin: 2rem 0;
    text-align: center;
  }

  .status-line {
    font-size: 0.75rem;
    color: var(--fg-light);
    margin-top: 1rem;
  }

  .warning-footer {
    border-top: 1px dashed var(--border);
    padding: 1rem;
    text-align: center;
  }

  .cmd-link {
    color: var(--blue);
    text-decoration: underline;
    font-size: 0.8rem;
    font-weight: bold;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }
</style>
