---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="404: SEGMENTATION_FAULT" subtitle="The requested memory address is not mapped.">
  <section class="error-container">
    <div class="error-terminal">
      <div class="terminal-header">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
        <span class="title">ERROR_LOG</span>
      </div>
      
      <div class="terminal-body">
        <p class="error-code">>> FATAL_ERROR: RESOURCE_NOT_FOUND</p>
        <p>The path you are trying to access does not exist in the current file system.</p>
        
        <div class="ascii-art">
          <pre>
     _
    / \
   | O |  SYSTEM_HALT
    \_/
    /|\
   / | \
          </pre>
        </div>

        <p class="trace-log">DEBUG_INFO: Stack trace recorded at {new Date().toLocaleTimeString()}</p>
        
        <a href="/" class="return-btn">/REBOOT_SYSTEM</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .error-container {
    display: flex;
    justify-content: center;
    padding: 3rem 0;
  }

  .error-terminal {
    width: 100%;
    max-width: 600px;
    border: 2px solid var(--border);
    box-shadow: 10px 10px 0px var(--border);
    background: var(--bg);
  }

  .terminal-header {
    background: var(--border);
    padding: 0.5rem;
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .dot { width: 10px; height: 10px; border-radius: 50%; border: 1px solid var(--bg); }
  .red { background: #ff5f56; }
  .yellow { background: #ffbd2e; }
  .green { background: #27c93f; }
  .title { margin-left: auto; font-size: 0.7rem; color: var(--bg); font-weight: bold; }

  .terminal-body { padding: 1.5rem; font-family: monospace; }

  .error-code { color: var(--orange); font-weight: bold; }

  .ascii-art pre { 
    color: var(--fg-light); 
    margin: 1.5rem 0; 
    font-size: 0.9rem;
    line-height: 1.1;
  }

  .trace-log { font-size: 0.7rem; opacity: 0.6; margin-bottom: 2rem; }

  .return-btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 2px solid var(--border);
    color: var(--border);
    text-decoration: none;
    font-weight: bold;
    transition: all 0.2s ease;
  }

  .return-btn:hover {
    background: var(--border);
    color: var(--bg);
  }
</style>
