---
import Navbar from '../components/Navbar.astro';
import Divider from '../components/Divider.astro';
const { title, subtitle } = Astro.props;
---

<header>
  <section>
    <img src="/ferris.gif" alt="Ferris" />
    <h1>{title}</h1>
    <h4>{subtitle}</h4>
  </section>

  <Navbar></Navbar>
  <Divider></Divider>
</header>

<style>
  header {
    width: 100%;
    gap: 0.3rem;

    section{
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 24px;

      img {
        width: 300px;
      }

      h1 {
        font-size: 1.4rem;
      }

      h4 {
        color: var(--fg5);
      }
    }
  }
</style>

