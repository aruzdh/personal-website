---
import Navbar from '../components/Navbar.astro';
import Divider from '../components/Divider.astro';
const { title, subtitle } = Astro.props;
const today = new Date().toLocaleDateString('en-GB');
const { pathname } = Astro.url;
const isAboutPage = pathname === '/about' || pathname.startsWith('/about/');
---

<header>
  <div class="status-bar">
    <button id="theme-toggle" class="system-switch" aria-label="Toggle System Theme">
      <span class="switch-label">MODE:</span>
      <div class="switch-visual">
        <span class="mode-text light">LTR</span>
        <span class="mode-text dark">DRK</span>
        <div class="slider"></div>
      </div>
    </button>
    <span class="status-item">USER: ARU</span>
    <span class="status-item">LOC: CDMX</span>
    <span class="status-item date-display">{today}</span>
    <span class="status-item blink">‚óè LIVE</span>
  </div>

  <section>
    <div class={`title-container ${isAboutPage ? 'pivoted' : ''}`}>
      {
        isAboutPage && (
          <img src="/ferris-crab.gif" alt="Ferris" />
        )
      }
      <h1>{title}</h1>
      {
        isAboutPage && (
          <img src="/gopher.GIF" alt="Ferris" />
        )
      }
    </div>

    {
      subtitle &&
      <p class="subtitle">  {">> " + subtitle} </p>
    }

  </section>

  <Navbar></Navbar>
  <Divider></Divider>
</header>

<style>
  header {
    width: 100%;
    gap: 0.3rem;

    section{
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 24px;

      h1 {
        font-size: 1.4rem;
        margin: 0;
      }

      .subtitle{
        font-size: 0.85rem;
        color: var(--fg-light);
        margin: 0.5rem 0 0 0;
      }
    }

  }

  .title-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .title-container.pivoted {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    width: 100%;
  }

  img {
    height: 40px;
  }

  .title-container.pivoted img:first-of-type {
    justify-self: end; 
  }

  .title-container.pivoted img:last-of-type {
    justify-self: start;
    margin-left: 2rem; 
  }

  .status-bar {
    background: var(--border);
    color: var(--bg);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.3rem 1rem;
    font-size: 0.7rem;
    font-weight: bold;
  }

  .blink {
    color: red;
    animation: pulse 1.3s infinite;
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.2; }
    100% { opacity: 1; }
  }

  .system-switch {
    background: transparent;
    border: 1px solid var(--bg); 
    color: var(--bg);
    font-family: "JetBrains Mono", monospace;
    font-size: 0.65rem;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    padding: 0;
    overflow: hidden;
    height: 20px;
  }

  .switch-label {
    padding: 0 0.5rem;
    background: var(--bg);
    color: var(--border);
    height: 100%;
    display: flex;
    align-items: center;
  }

  .switch-visual {
    position: relative;
    display: flex;
    padding: 0 0.5rem;
    gap: 0.8rem;
    align-items: center;
    background: transparent;
  }

  .mode-text {
    z-index: 2;
    opacity: 0.5;
    transition: opacity 0.2s ease;
  }

  .slider {
    position: absolute;
    top: 2px;
    bottom: 2px;
    width: 28px;
    background: var(--bg);
    z-index: 1;
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global([data-theme='light']) .slider {
    transform: translateX(-4px);
  }
  :global([data-theme='dark']) .slider {
    transform: translateX(26px);
  }

  :global([data-theme='light']) .mode-text.light { opacity: 1; color: var(--border); }
  :global([data-theme='dark']) .mode-text.dark { opacity: 1; color: var(--border); }

  .system-switch:hover {
    filter: brightness(1.2);
  }
</style>

<script>
  const button = document.getElementById('theme-toggle');
  button?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme');
    const next = current === 'light' ? 'dark' : 'light';
    document.documentElement.setAttribute('data-theme', next);
    localStorage.setItem('theme', next);
  });
</script>
