---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Divider from '../components/Divider.astro';
import { PAGE_TITLE } from '../consts';

const { title, subtitle } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/aru.webp" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Google+Sans+Code:ital,wght@0,300..800;1,300..800&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">

    <title>{PAGE_TITLE}</title>
  </head>

  <body>
    <Header title={title} subtitle={subtitle} /> 
    <main>
      <slot />
      <Divider />
    </main>
  </body>
</html>

<style>
  html {
    display: flex;
    justify-content: center;
  }

  body {
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    justify-content:flex-start ;
    width: 100%;
    max-width: 600px;
    margin: 0 2rem;
  }

</style>
